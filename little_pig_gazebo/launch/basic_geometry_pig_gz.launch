<launch>

    <arg name="model" default="$(find little_pig_description)/urdf/basic_geometry_pig.urdf.xacro"/>

    <include file="$(find urdf_sim_tutorial)/launch/gazebo.launch">
        <arg name="model" value="$(arg model)" />
    </include>
    
    <!-- Load the URDF into the ROS Parameter Server -->
    <param name="robot_description"
        command="$(find xacro)/xacro --inorder '$(find little_pig_description)/urdf/basic_geometry_pig.urdf.xacro'" />

</launch>